@page
@model KTLT.Pages.MH_TinhChuViTamGiacModel
@using KTLT.Entities
@using KTLT.Services
@{
    TAMGIAC t;
    t.A.X = 1; t.A.Y = 2;
    t.B.X = 3; t.B.Y = 4;
    t.C.X = 5; t.C.Y = 6;
    string kq = string.Empty;
    //Request.Method == "POST"
    if (Request.HasFormContentType)
    {
        t.A.X = int.Parse(Request.Form["x1"]);
        t.A.Y = int.Parse(Request.Form["y1"]);
        t.B.X = int.Parse(Request.Form["x2"]);
        t.B.Y = int.Parse(Request.Form["y2"]); 
        t.C.X = int.Parse(Request.Form["x3"]);
        t.C.Y = int.Parse(Request.Form["y3"]);
    }
    bool s = XuLyTamGiac.LuuTamGiac(t);
    kq = $"Kết quả: {s}";
    string currentTime = $"Current time is {DateTime.Now}";
}

<form method="POST">
    <label for="a">Nhập X 1</label><br>
    <input type="text" name="x1" value=@t.A.X><br>
    <label for="a">Nhập Y 1</label><br>
    <input type="text" name="y1" value=@t.A.Y><br>
    <label for="a">Nhập X 2</label><br>
    <input type="text" name="x2" value=@t.B.X><br>
    <label for="a">Nhập Y 2</label><br>
    <input type="text" name="y2" value=@t.B.Y><br>
    <label for="a">Nhập X 3</label><br>
    <input type="text" name="x3" value=@t.C.X><br>
    <label for="a">Nhập Y 3</label><br>
    <input type="text" name="y3" value=@t.C.Y><br>
    <input type="submit" value="Tính">
</form>

<p>@kq</p>
<p>@currentTime</p>